<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLayout"
        android:visibility="invisible">

        <TextView
            android:id="@+id/timerText"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:background="@color/Yellow"
            android:text="0s"
            android:gravity="center"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/problemText"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="75dp"
            android:background="@color/Gray"
            android:text="8+5"
            android:textSize="40sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/scoreText"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="280dp"
            android:background="@color/Orange"
            android:text="0/0"
            android:textSize="30sp"
            android:gravity="center"/>
        <GridLayout
            android:id="@+id/answerOptionsGridLayout"
            android:layout_width="390dp"
            android:layout_height="300dp"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginTop="160dp"
            android:layout_marginStart="10dp">
            <Button
                android:id="@+id/answerButton1"
                android:onClick="answerJudge"
                android:layout_width="195dp"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@color/Blue"
                android:text="1"
                android:textSize="100sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:tag="0"/>
            <Button
                android:id="@+id/answerButton2"
                android:onClick="answerJudge"
                android:layout_width="195dp"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/Green"
                android:text="2"
                android:textSize="100sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:tag="1"/>
            <Button
                android:id="@+id/answerButton3"
                android:onClick="answerJudge"
                android:layout_width="195dp"
                android:layout_height="150dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@color/Magenta"
                android:text="3"
                android:textSize="100sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:tag="2"/>
            <Button
                android:id="@+id/answerButton4"
                android:onClick="answerJudge"
                android:layout_width="195dp"
                android:layout_height="150dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@color/LightSkyBlue"
                android:text="4"
                android:textSize="100sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:tag="3"/>

        </GridLayout>
        <TextView
            android:id="@+id/finalResultText"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:text="Score"
            android:gravity="center"
            android:textSize="60sp"
            android:layout_marginTop="470dp"/>

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="580dp"
            android:onClick="playActivity"
            android:text="Play Again"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:id="@+id/startingButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/Lime"
        android:orientation="vertical"
        android:text="GO!"
        android:textSize="100sp"
        android:textStyle="bold"
        android:onClick="playActivity"/>

    <TextView
        android:id="@+id/checkingPurpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="@string/lol"/>

</RelativeLayout>
